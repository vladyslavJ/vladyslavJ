# EditorConfig is awesome: https://EditorConfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_size = 2
trim_trailing_whitespace = true

# Markdown files
[*.{md,markdown}]
trim_trailing_whitespace = false
max_line_length = 80
indent_size = 2
